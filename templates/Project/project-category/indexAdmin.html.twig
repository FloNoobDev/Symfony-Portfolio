{% extends 'baseAdmin.html.twig' %}

{% block title %}Category Project{% endblock %}

{% block body %}
<main class="container my-2">
    <div class="row justify-content-center">
        <div class="col-8">
            <h3 class="text-center py-3">Les catégories de projets</h3>
        </div>
    </div>

    {% include "_partials/brSmall.html.twig" %}

    <div class="row justify-content-center">
        <div class="col-6">
            <table class="table table-light table-striped">
                <thead>
                    <tr>
                        <th>Numéro</th>
                        <th>Nom</th>
                        <th>Projet lié</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    {% for pCats in projectCats %}
                    <tr class="align-middle text-center">
                        <td>{{loop.index}}</td>
                        <td>{{pCats.name}}</td>
                        <td>{{pCats.projects|length}}</td>
                        <td>
                            <a href="{{ path('project-category-admin-update',{'id': pCats.id}) }}" class="btn btn-info"><i class="bi bi-recycle fs-5"></i></a>
                            <a href="{{ path('project-category-admin-delete',{'id': pCats.id}) }}" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')"><i
                                    class="bi bi-trash fs-5"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% include "_partials/brSmall.html.twig" %}

    <div class="row justify-content-end">
        <div class="col-1">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#addModal">Création</button>
        </div>
    </div>

    {% include "Project/project-category/formModal.html.twig" %}

</main>
{% endblock %}