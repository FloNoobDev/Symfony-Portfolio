{% extends 'baseAdmin.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
<main class="my-2">

    <h4 class="text-center py-3">Les projets</h4>

    <table class="table">
        <thead>
            <th>Numéro</th>
            <th>Nom</th>
            <th>Catégorie</th>
            <th>Résumé</th>
            <th>Description</th>
            <th>Outil</th>
            <th>Débuté le</th>
            <th>Actions</th>
        </thead>
        <tbody class="align-middle">
            {% for project in projects %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{project.name}}</td>
               <td>{{project.category.name}}</td>
                <td>{{project.shortText}}</td>
                <td>{{project.description}}</td>
                <td>{{project.environment}}</td>
                <td>{{project.startedAt|date('d/m/Y')}}</td>

                <td>
                    <a href="" class="btn btn-danger"><i class="bi bi-trash fs-4"></i></a>
                    <a href="" class="btn btn-info"><i class="bi bi-recycle fs-4"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="" class="btn btn-primary">Ajouter un projet</a>
    </div>
</main>
{% endblock %}