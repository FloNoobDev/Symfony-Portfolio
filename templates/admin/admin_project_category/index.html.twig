{% extends 'baseAdmin.html.twig' %}

{% block title %}Category Project{% endblock %}

{% block body %}
<main class="my-2">
    <h3 class="text-center py-3">Les catégories de projets</h3>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            {% for pCats in projectCats %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{pCats.name}}</td>
                <td>
                    <a href="" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')"><i class="bi bi-trash fs-4"></i></a>
                    <a href="" class="btn btn-info"><i class="bi bi-recycle fs-4"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('create_projcat') }}" class="btn btn-primary">Ajouter une catégorie de projet</a>
    </div></main>
{% endblock %}