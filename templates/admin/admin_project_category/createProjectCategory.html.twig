{% extends 'baseAdmin.html.twig' %}

{% block title %}ProjectCategory - Create{% endblock %}

{% block body %}

<main>
    <h3 class="text-center py-3">Création d'une catégorie de projet</h3>

    {{form_start(form)}}
    <div class="container">
        <div class="row">
            <div class="col">
                {{form_row(form.name)}}
            </div>
        </div>
        <div class="row">
            <div class="col-8 offset-2 text-end">
                <a class="btn btn-danger" href="{{path('project_categories')}}">Annuler</a>                
                <button class="btn btn-success">Créer</button>
            </div>
        </div>
    </div>
    {{form_end(form)}}

</main>

{% endblock %}