{% extends 'baseAdmin.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}

<main class="my-2">

    <h4 class="text-center py-3">Les compétences</h4>

    <table class="table">
        <thead>
            <th>Numéro</th>
            <th>Nom</th>
            <th>Catégorie</th>
            <th>Actions</th>
        </thead>
        <tbody class="align-middle">
            {% for skill in skills %}
            <tr>
                <td>{{loop.index}}</td>
                <td>{{skill.name}}</td>
                <td>A venir</td>
                {# <td>{{skill.categoryId}}</td> #}
                <td>
                    <a href="" class="btn btn-danger"><i class="bi bi-trash fs-4"></i></a>
                    <a href="" class="btn btn-info"><i class="bi bi-recycle fs-4"></i></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="" class="btn btn-primary">Ajouter une compétence</a>
    </div>
</main>

{% endblock %}