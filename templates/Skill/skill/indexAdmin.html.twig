{% extends 'baseAdmin.html.twig' %}

{% block title %}Skills{% endblock %}

{% block body %}

<main class="container my-2">
    <div class="row justify-content-center">
        <div class="col-12">
            <h3 class="text-center">Les compétences</h3>
        </div>
    </div>

    {% include "_partials/brSmall.html.twig" %}

    <div class="row justify-content-center">
        <table class="table table-light table-striped">
            <thead>
                <th>Numéro</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </thead>
            <tbody class="align-middle">
                {% for skill in skills %}
                <tr>
                    <td>{{loop.index}}</td>
                    <td>{{skill.name}}</td>
                    <td>{{skill.category.name}}</td>
                    <td>
                        <a href="" class="btn btn-danger"><i class="bi bi-trash fs-4"></i></a>
                        <a href="" class="btn btn-info"><i class="bi bi-recycle fs-4"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {% include "_partials/brSmall.html.twig" %}

    <div class="row justify-content-end">
        <div class="col-1">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#addModal">Création</button>
        </div>
    </div>
</main>

{% include "Skill/skill/formModal.html.twig" %}

{% endblock %}