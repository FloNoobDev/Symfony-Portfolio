{% extends 'baseAdmin.html.twig' %}

{% block title %}Profile-Crate{% endblock %}

{% block body %}

<main class="container my-2">
    <div class="row justify-content-center">
        <div class="col-12">
            <h3 class="text-center py-3">Création d'un profil</h3>
        </div>
    </div>

    {% include "_partials/brSmall.html.twig" %}

    <div class="row justify-content-center">
        <div class="col-10">
            {{form_start(form)}}
        
            <div class="row justify-content-center">
                <div class="col-5">
                    {{form_row(form.lastName,{'label':'Nom :'})}}
                </div>
                <div class="col-5">
                    {{form_row(form.firstName,{'label':'Prénom :'})}}
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-10">
                    {{form_row(form.title1,{'label':'Poste lib 1 :'})}}
                    {{form_row(form.title2,{'label':'Poste lib 2 :'})}}                    
                    {{form_row(form.image,{'label':'Avatar :'})}}
                    {{form_row(form.hobby,{'label':'Passions :'})}}
                    {{form_row(form.shortPitch,{'label':'Description courte :'})}}
                    {{form_row(form.description,{'label':'Description longue :'})}}
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-1">
                    {{form_row(form.submit,{'label':'Modifier'})}}
                </div>
            </div>
    
            {{form_end(form)}}
        </div>
    </div>

    {% include "_partials/brSmall.html.twig" %}

    <div class="row justify-content-end">
        <div class="col-1">
            <a href="{{path('profile-admin')}}" class="btn btn-secondary">Retour</a>
        </div>
    </div>

</main>

{% endblock %}