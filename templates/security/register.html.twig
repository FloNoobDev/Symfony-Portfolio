{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container text-dark">

    <div class="row">
        <div class="col text-center">
            <h1>Inscription</h1>
        </div>
    </div>

    {% include "_partials/brSmall.html.twig" %}

        {{ form_start(form) }}

        <div class="row mb-3 justify-content-center">
            <div class="col col-mb-4">
                {{ form_row(form.email, {
                    'label': 'Votre E-mail'
                    }) }}
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-2 mb-3 justify-content-center">
            <div class="col p-2">
                {{ form_row(form.plainPassword.first, {
                'label': 'Mot de passe'
                }) }}
            </div>
            <div class="col p-2">
                {{ form_row(form.plainPassword.second, {
                'label': 'Confirmation mot de passe'
                }) }}
            </div>
        </div>



        <div class="row">
            <div class="col-6 offset-3 mb-5 text-end">
                <button type="submit" class="btn btn-success" onclick="validate()">Inscription</button>
            </div>
        </div>

        {{ form_end(form) }}


    {% include "_partials/brSmall.html.twig" %}

    <div class="row text-center">
        <div class="col-12">
            <span>Déjà inscrit ? <a href="{{ path('login') }}" class="ms-1 btn btn-outline-dark">Connectez-vous !</a></span>
        </div>
    </div>

</div>
{% endblock %}
