{% extends 'base.html.twig' %}

{% block title %}Log in{% endblock %}

{% block body %}

<main class="container">
    <form method="post">
        
        <div class="row justify-content-center">
            <div class="col">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                
                {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Logout</a>
                </div>
                {% endif %}
            </div>
        </div>
        
        <div class="row justify-content-center">
            <div class="col text-center">
                <h3 class="my-3 text-light">Espace connection</h3>
            </div>
        </div>

        {% include "_partials/brSmall.html.twig" %}
        
        <div class="row row-cols-1 row-cols-md-2 justify-content-center">
            <div class="col">
                <label class="text-light" for="inputEmail">Email :</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                    autocomplete="email" required autofocus>
            </div>
            <div class="col">
                <label class="text-light" for="inputPassword">Code secret :</label>
                <input type="password" name="password" id="inputPassword" class="form-control"
                    autocomplete="current-password" required>
            </div>
        </div>
        
        {% include "_partials/brSmall.html.twig" %}

        <div class="row justify-content-center">
            <div class="col text-center">
                <button class="btn btn-lg btn-primary" type="submit">Connection</button>
            </div>
        </div>





        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    </form>

</main>

{% endblock %}